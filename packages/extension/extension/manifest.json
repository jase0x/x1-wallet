{
  "manifest_version": 3,
  "name": "X1 Wallet",
  "version": "0.10.79",
  "description": "X1 Blockchain Native Wallet",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/16-wallet.png",
      "48": "icons/48-wallet.png",
      "128": "icons/128-wallet.png"
    }
  },
  "icons": {
      "16": "icons/16-wallet.png",
      "48": "icons/48-wallet.png",
      "128": "icons/128-wallet.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["provider.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": [
    "storage",
    "clipboardWrite",
    "clipboardRead",
    "sidePanel"
  ],
  "host_permissions": [
    "https://rpc.mainnet.x1.xyz/*",
    "https://rpc.testnet.x1.xyz/*",
    "https://api.xdex.xyz/*",
    "https://devapi.xdex.xyz/*",
    "https://mobile-api.x1.xyz/*",
    "https://core.x1.xyz/*",
    "https://core.xdex.xyz/*",
    "https://mint.xdex.xyz/*",
    "https://ipfs.io/*",
    "https://gateway.pinata.cloud/*",
    "https://api.mainnet-beta.solana.com/*",
    "https://api.devnet.solana.com/*",
    "https://jessamine-463apc-fast-mainnet.helius-rpc.com/*",
    "https://rose-l3rk46-fast-devnet.helius-rpc.com/*",
    "https://lite-api.jup.ag/*",
    "https://api.jup.ag/*",
    "https://tokens.jup.ag/*",
    "https://arweave.net/*",
    "https://static.jup.ag/*",
    "https://*.helius-rpc.com/*",
    "https://raw.githubusercontent.com/*",
    "https://connect.trezor.io/*",
    "https://open.er-api.com/*",
    "https://bridge-api.x1.xyz/*",
    "https://app.bridge.x1.xyz/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}